{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "lib": ["es2015"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
