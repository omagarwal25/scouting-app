{
  "name": "@griffins-scout/api",
  "version": "3.0.0",
  "description": "The browser API collection for anything Griffins Scout",
  "main": "dist/packages/api/src/index.js",
  "module": "dist/packages/api/index.esm.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "wireit",
    "dev": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "clean": "if-file-deleted",
      "dependencies": [
        "../../apps/controller:build"
      ],
      "files": [
        "src/**",
        "../../apps/controller/**"
      ],
      "output": [
        "dist/**"
      ]
    },
    "dev": {
      "command": "tsc",
      "clean": "if-file-deleted",
      "files": [
        "src/**"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "author": "omagarwal25",
  "license": "MIT",
  "private": true,
  "devDependencies": {},
  "dependencies": {
    "@griffins-scout/game": "*"
  }
}
