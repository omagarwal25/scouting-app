{
  "name": "@griffins-scout/scanner",
  "private": true,
  "version": "2.1.0",
  "scripts": {
    "dev": "wireit",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview"
  },
  "wireit": {
    "dev": {
      "command": "vite --port=3001",
      "files": [
        "src/**/*.ts",
        "src/**/*.vue"
      ],
      "dependencies": [
        "../../packages/game:build"
      ]
    }
  },
  "dependencies": {
    "@griffins-scout/game": "*",
    "@trpc/client": "^10.35.0",
    "@trpc/server": "^10.35.0",
    "@vueuse/core": "^9.1.1",
    "node-fetch": "^3.2.10",
    "pinia": "^2.0.21",
    "qrcode.vue": "^3.3.3",
    "superjson": "^1.9.1",
    "vue": "^3.2.38",
    "vue3-qr-reader": "^1.0.0"
  },
  "devDependencies": {
    "@griffins-scout/api": "*",
    "@types/node": "^18.7.14",
    "@vitejs/plugin-vue": "^3.0.3",
    "autoprefixer": "^10.4.8",
    "postcss": "^8.4.16",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vue-tsc": "^0.40.5"
  }
}
