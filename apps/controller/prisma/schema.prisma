enum Station {
  RED_1
  RED_2
  RED_3
  BLUE_1
  BLUE_2
  BLUE_3
}

enum GameType {
  QUALIFIER
  PRACTICE
  PLAYOFF
}

model Record {
  id      Int     @id @default(autoincrement())
  station Station

  Game   Game     @relation(references: [id], fields: [gameId])
  gameId Int
  data   String[]
  Team   Team     @relation(fields: [teamId], references: [id])
  teamId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([station, teamId, gameId])
}

model Game {
  id     Int      @id @default(autoincrement())
  time   DateTime @default(now())
  type   GameType
  number Int

  Records Record[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([type, number])
}

model Team {
  id     Int    @id @default(autoincrement())
  name   String
  number Int    @unique
  weight Float

  Records Record[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
