{
  "name": "@griffins-scout/controller",
  "version": "2.1.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "gen": "wireit",
    "push": "wireit",
    "dev": "concurrently --kill-others --names \"BUILD,RUN\" -c \"bgBlue.bold,bgMagenta.bold\" \"tsc --build -w --pretty\" \"nodemon -q -w dist dist/src/server.js\""
  },
  "wireit": {
    "gen": {
      "command": "prisma generate",
      "files": [
        "prisma/schema.prisma"
      ]
    },
    "push": {
      "command": "prisma db push",
      "files": [
        "prisma/schema.prisma"
      ],
      "dependencies": [
        "gen"
      ]
    },
    "build": {
      "server": true,
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "clean": "if-file-deleted",
      "dependencies": [
        "gen",
        "../../packages/game:build"
      ]
    },
    "start": {
      "command": "node dist/src/server.js",
      "dependencies": [
        "build",
        "push"
      ],
      "files": [
        "dist/**",
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "clean": "if-file-deleted"
    }
  },
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.1",
    "@griffins-scout/game": "*",
    "@prisma/client": "5.7.1",
    "@trpc/server": "^10.35.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envsafe": "^2.0.3",
    "express": "^4.18.1",
    "google-auth-library": "^8.7.0",
    "googleapis": "^111.0.0",
    "got": "^12.5.3",
    "superjson": "^1.13.1",
    "trpc-playground": "^1.0.4",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.14",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^5.7.1",
    "typescript": "^4.8.2"
  }
}
